<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".StatsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <TableLayout
            android:id="@+id/tableLayoutStats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:layout_constraintWidth_max="600dp">

            <TextView
                android:id="@+id/textViewStats"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginTop="@dimen/spinner_table_textview_margin_top"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:text="@string/stats_screen_explanation"
                android:textSize="@dimen/button_checkbox_textview_font_size" />

            <TableRow
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginTop="@dimen/spinner_table_textview_margin_top"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:background="@color/mint_green"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stressor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/column_name_font_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/score"
                    android:textColor="@color/white"
                    android:textSize="@dimen/column_name_font_size" />
            </TableRow>

            <TableRow
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:background="@color/lime_green"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sight"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />

                <TextView
                    android:id="@+id/textViewSight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_applicable"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />
            </TableRow>

            <TableRow
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:background="@color/lime_green"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/smell"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />

                <TextView
                    android:id="@+id/textViewSmell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_applicable"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />
            </TableRow>

            <TableRow
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:background="@color/lime_green"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sound"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />

                <TextView
                    android:id="@+id/textViewSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_applicable"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />
            </TableRow>

            <TableRow
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:background="@color/lime_green"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/taste"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />

                <TextView
                    android:id="@+id/textViewTaste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_applicable"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />
            </TableRow>

            <TableRow
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:background="@color/lime_green"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/touch"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />

                <TextView
                    android:id="@+id/textViewTouch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/not_applicable"
                    android:textSize="@dimen/button_checkbox_textview_font_size" />
            </TableRow>
            <TextView
                android:id="@+id/textViewStressorDescription"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/spinner_table_textview_margin_left"
                android:layout_marginTop="@dimen/spinner_table_textview_margin_top"
                android:layout_marginEnd="@dimen/spinner_table_textview_margin_right"
                android:text="@string/sensory_stressors_description"
                android:textSize="@dimen/button_checkbox_textview_font_size" />
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>